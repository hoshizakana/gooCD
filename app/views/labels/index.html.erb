<%= render 'layouts/admin-nav' %>

<h1>レーベルマスタ編集</h1>

<%# レーベルが登録された場合、「投稿されました」の文字を表示 %>
<% if flash[:notice] %>
  <%= flash[:notice] %>
 <% end %> 


<%# 検索フォーム %>
 <%= search_form_for @search, url: '/labels', method: :get, enforce_utf8: false do |f| %>
   <%= autocomplete_field_tag 'label[name]', nil, '/labels/autocomplete_product_name' %>
   <%= f.submit '検索' %>
 <% end %>

<%# レーベルの投稿フォーム %>
<%= form_for(@label) do |f| %>
  <%= f.text_field :name %>
  <%= f.submit "追加する" %>
<% end %>

<%# レーベルの一覧表示 %>
<h3>レーベル一覧</h3>
<% @labels.each do |label| %>
  <div>
    <%= label.id %>
    <%= label.name %>
  </div>
<% end %>

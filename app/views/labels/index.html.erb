<%= render 'layouts/admin-nav' %>
<div class="container">
  <div class="row">

    <h1>レーベルマスタ編集</h1>

    <%# フラッシュメッセージ %>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message %>
      </div>
    <% end %>


    <%# レーベルの投稿フォーム %>
    <%= form_for(@label) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <%= f.text_field :name %>
      <%= f.submit "追加する" %>
    <% end %>

    <%# 検索フォーム（オートコンプリート） %>
     <%= search_form_for @search, url: '/labels', method: :get, enforce_utf8: false do |f| %>
       <%= autocomplete_field_tag 'label[name]', nil, '/labels/autocomplete_product_name' %>
       <%= f.submit '検索' %>
     <% end %>

    <%# レーベルの一覧表示 %>
    <h3>レーベル一覧</h3>
    <table class="table">
    <% @labels.each do |label| %>
        <%= render 'labels/each_label', label: label %>
        <%= render 'labels/each_label_button', label: label %>
    <% end %>
    </table>
  </div>
</div>

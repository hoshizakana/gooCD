<%= render 'layouts/admin-nav' %>
<div class="container">
  <h2>会員情報編集</h2>
  <hr class="admin-hr">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <%= form_for @user, url: "/admin/users/#{@user.id}" do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
            <table class="table">
                    <tr><th>会員ID</th><th><%= @user.id %></th></tr>
                    <tr><th>名前（漢字）</th>
                      <th>姓<%= f.text_field :last_name %>名<%= f.text_field :first_name %></th></tr>
                    <tr><th>名前（カナ）
                    <th>セイ<%= f.text_field :last_name_kana %>メイ<%= f.text_field :first_name_kana %></th></tr>
                    <tr><th>電話番号（ハイフン無し）</th>
                      <th><%= f.text_field :phone %></th></tr>
                    <tr><th>メールアドレス</th>
                      <th><%= f.email_field :email %></th></tr>
                    <tr><th>郵便番号</th>
                      <th><%= f.text_field :postal_code %></th></tr>
                    <tr><th>住所</th>
                      <th><%= f.text_field :adress %></th></tr>
                    <tr><th>削除フラグ</th>
                      <th><%= f.check_box :is_deleted, {}, "true", "false" %></th></tr>
            </table>
              <div class="row">
                <div class="col-xs-5 col-xs-offset-3">
                  <%= f.submit "更新", class: "btn btn-primary admin-user-edit-button" %><!-- text-align: right; -->
                </div>
              </div>
        <% end %>
    </div>
  </div>
</div>

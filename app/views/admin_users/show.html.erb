<h1>
	Admin_usersd#show
	Saddy
</h1>

<div class="container">
	<div class="row admin-nav-bar">
		<div class="col-lg-12">
			<%= render 'layouts/admin-nav' %>
		</div>
	</div>

	<div class="row user-show">
		<div class="col-lg-10 col-lg-offset-1">
			<h2>会員情報詳細</h2>
			<table class="user-show-table">
				<tr>
					<th>ID</th>
					<td colspan="5"><%= @user.id %></td>
				</tr>
				<tr>
					<th>名前（漢字）</th>
					<td>(姓)</td>
					<td><%= @user.last_name %></td>
					<td>(名)</td>
					<td><%= @user.first_name %></td>
				</tr>
				<tr>
					<th>名前（カナ）</th>
					<td>(セイ)</td>
					<td><%= @user.last_name_kana %></td>
					<td>(メイ)</td>
					<td><%= @user.first_name_kana %></td>
				</tr>
				<tr>
					<th>電話番号</th>
					<td colspan="5"><%= @user.phone %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td colspan="5"><%= @user.email %></td>
				</tr>
				<tr>
					<th>郵便番号</th>
					<td colspan="5"><%= @user.postal_code %></td>
				</tr>
				<tr>
					<th>住所</th>
					<td colspan="5"><%= @user.adress %></td>
				</tr>
				<tr>
					<th>削除フラグ</th>
					<td colspan="5">
						<% if @user.is_deleted == false %>
							<i class="fa fa-square-o "></i>
						<% else %>
							<i class="fa fa-check-square-o "></i>削除済み
						<% end %>
					</td>
				</tr>
			</table>
			<%= link_to "編集", "/admin/users/#{@user.id}/edit" %>
		</div>
	</div>

	<div class="row order-history">
		<div class="col-lg-10 col-lg-offset-1">
			<h3>購入履歴</h3>
			<table class="order-history-table">
				<tr>
					<th>注文ID</th>
					<th>注文日</th>
					<th>対応状況</th>
					<th>購入金額</th>
				</tr>
				<tr>
					<!-- ここに購入履歴を繰り返し表示 -->
					<!-- かつ、プルダウンリストを非同期更新でステータス変更 -->
				</tr>
			</table>

		</div>

	</div>

</div>

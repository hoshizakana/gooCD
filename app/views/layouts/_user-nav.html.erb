

<div class="header">
    <div class="container ">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          
            <div class="slidemenu">
                    <ul class="nav navbar-nav navbar-left">
                        
                
                        <li>
                            <div class="form-inline">
                            <div class="input-group">
                                <%= search_form_for @q, url: products_path do |f| %>
                                <%= f.search_field :name_or_artist_name_or_songs_name_cont, class:"form-control search-form",style:"width:300px",placeholder:"商品名・アーティスト名・曲名で検索" %>
                                <span class="input-group-btn">
                                    <%= f.submit "検索", class:"btn btn-default" %>
                                </span>
                            　　 <% end %>
                            </div>
                        </li>
                    </ul>

                  
                    <ul class="nav navbar-nav navbar-right">
                        <% if user_signed_in? %>

                        <div class='nav-contents'>
                        <%= link_to "/products" do %>
                            <%= link_to '', "/products", class: "glyphicon glyphicon-headphones cart" %>
                            <%= link_to '商品一覧', "/products", id: "cart-hover", class: "cart-mouseover" %>
                        <% end %>
                        </div>
                        <div class='nav-contents'>
                        <%= link_to "/ranking" do %>
                            <div style='display:inline-block'>
                            <%= link_to '', "/ranking", class: "glyphicon glyphicon-king cart" %>
                            <%= link_to 'ランキング', "/ranking", id: "cart-hover", class: "cart-mouseover" %>
                        <% end %>
                        </div>
                        <div class='nav-contents'>
                        <%= link_to "/carts/#{current_user.id}" do %>
                            <div style='display:inline-block'>
                            <%= link_to '', "/carts/#{current_user.id}", class: "glyphicon glyphicon-shopping-cart cart" %>
                            <%= link_to 'カートに入れる', "/carts/#{current_user.id}", id: "cart-hover", class: "cart-mouseover" %>
                        <% end %>
                        </div>
                        <div class='nav-contents'>              
                        <%= link_to "/users/#{current_user.id}" do %>                  
                            <%= link_to '', "/users/#{current_user.id}", class: "glyphicon glyphicon-user cart" %>
                            <%= link_to 'マイページ', "/users/#{current_user.id}", id: "cart-hover", class: "cart-mouseover" %>
                        <% end %>
                        </div>
                        <div class='nav-contents'>                                           
                        <%= link_to "/users/sign_out" do %>                           
                            <%= link_to '', "/users/sign_out", method: :delete, class: "glyphicon glyphicon-log-out cart" %>

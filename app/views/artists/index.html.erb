<%= render 'layouts/admin-nav' %>

<h1>アーティストマスタ編集</h1>

<%# アーティストが登録された場合、「投稿されました」の文字を表示 %>
<% if flash[:notice] %>
  <%= flash[:notice] %>
 <% end %> 

<%# アーティストの投稿フォーム %>
<%= form_for(@artist) do |f| %>
  <%= f.text_field :name %>
  <%= f.submit "追加する" %>
<% end %>

<%# アーティストの一覧表示 %>
<h3>アーティスト一覧</h3>
<% @artists.each do |artist| %>
  <div>
    <%= artist.id %>
    <%= artist.name %>
  </div>
<% end %>

<%= render 'layouts/user-nav', user: current_user  %>
<div class="container">
    <div class="row　">
        <div class="col-lg-6">
					<h1 class="user-logo">送付先住所 登録</h1>
						<%= form_for(@address,url:"/addresses/#{params[:id]}") do |f| %> 
							<%= render 'layouts/error_messages', model: f.object %>
							<div class="form-group"> 
									
											<h4>郵便番号</h4>
											<span><%= f.text_field :postal_code, class: "form-control" %> 

											<h4>住所</h4> 
											<%= f.text_area :address, class: "form-control"  %>

											<h4>名前</h4>
											<h4>姓</h4>
											<%= f.text_field :last_name, class: "form-control"  %>
											<h4>名</h4>
											<%= f.text_field :first_name, class: "form-control" %>      

											<h4>名前(カナ)</h4>
											<h4>(セイ)</h4>
											<%= f.text_field :last_name_kana, class: "form-control"  %>
											<h4>(メイ)</h4>
											<%= f.text_field :first_name_kana, class: "form-control" %>
											
											<h4>電話番号</h4>
											<%= f.text_field :phone, class: "form-control" %>
																			
											<%= f.submit '登録',  class: "btn-flat-border btn-block" %>
											
							</div>
						<% end %>

        </div>
    </div>
</div>
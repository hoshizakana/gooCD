<h1>
	Orders#process
	Saddy
</h1>

<div class="container">
	<div class="row nav">
		<div class="col-lg-12">
			<%= render 'layouts/user-nav' %>
		</div>
	</div>

	<div class="row ">
		<div class="col-lg-10 col-lg-offset-1">
			<h2>ご購入手続き</h2>
			<%= form_for(@order, url: "/orders/#{current_user.id}/confirm") do |f| %>
				<%= f.text_field :payment %>
				<%= f.text_field :shipping_status %>
				<%= f.text_field :last_name %>
				<%= f.text_field :first_name %>
				<%= f.text_field :last_name_kana %>
				<%= f.text_field :first_name_kana %>
				<%= f.text_field :postal_code %>
				<%= f.text_field :address %>
				<%= f.text_field :phone %>
				<%= f.submit "はよ" %>
			<% end %>
	</div>

</div>

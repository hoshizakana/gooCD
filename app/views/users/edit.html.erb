<%= render 'layouts/user-nav', users:  @user, user: current_user  %>

<div class="container user-edit-image">
    <div class="row">
        <div class="col-lg-3">
        <h1 class="user-logo">Users Edit</h1>
        <%= form_for @user, url: "/users/#{@user.id}" do |f| %> 
        <div class="form-group"> 
                <h4>名前(漢字)</h4>
                <h4>(姓)</h4>
                <%= f.text_field :last_name, class: "form-control" %> 
                <h4>(名)</h4> 
                <%= f.text_field :first_name, class: "form-control"  %>
                              
                <h4>名前(カナ)</h4>
                <h4>(セイ)</h4>
                <%= f.text_field :last_name_kana, class: "form-control"  %>
                <h4>(メイ)</h4>
                <%= f.text_field :first_name_kana, class: "form-control" %>
                
                <h4>電話番号</h4>
                <%= f.text_field :phone, class: "form-control" %>
                
                <h4>メールアドレス</h4>
                <%= f.text_field :email, class: "form-control" %>
                
                <h4>郵便番号</h4>
                <%= f.text_field :postal_code, class: "form-control" %>
                <h4>住所</h4>
                <%= f.text_field :adress, class: "form-control" %>
                
                <%= f.submit '更新',  class: "btn-flat-border btn-block" %>
                
        </div>
        <% end %>

        </div>
    </div>
</div>
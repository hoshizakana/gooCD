<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :'姓' %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>
  </div>

  <div class="field">
    <%= f.label :'名' %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
  </div>

  <div class="field">
    <%= f.label :'セイ' %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :'メイ' %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :'郵便番号' %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :'住所' %><br />
    <%= f.text_field :adress, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "users/shared/links" %>

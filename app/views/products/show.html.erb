
<%= render 'layouts/user-nav', products:  @product, user: current_user  %>
 <div class="container">
    <div class="row product-wrapper">
        <div class="col-xs-6">
            <div class="left-content">
                <div class="name">
                    <%= @product.name %><br>
                </div>
                <%= attachment_image_tag @product, :image, :fill, 350, 350, format: 'jpeg',fallback: 'no_image.jpg', size: "350x350" %>
                <div class="product-date">
                    <span class="release-date">発売日<%= @product.release_date %></span>
                    
                    <span class="songs-count">曲数<%= @product.songs.count %></span>
                    
                </div>
                <div class="product-buy">
                    <div class="favorite">
                        <%= render 'products/products', product: @product %>
                    </div>
                    <div class="price">
                        ¥<%= @product.price %>税込価格
                    </div>
                    
                    <div class="buy-btn">
                        <%= link_to "カートに入れる", "/cart_items/#{@product.id}", class: "btn-flat-border btn-block" %>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="right-content">
                <div class="text">
                    <div class="artist-name">
                        <%= @product.artist.name %><br>
                    </div>
                    <div class="name">
                        <%= @product.label.name %>
                        <%= @product.genre.name %>
                    </div>
                </div>
                <div class="song-index">
                    <div class="title">
                        <%= @product.name %>
                    </div>
                    <div class="songs">
                        <% @product.songs.each do |song| %><br>
                            <%= song.disk %>
                            <%= song.name %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <div class="col-lg-12">
        <div class="row">  
            <% @products.each do |f| %>
                <div class="col-lg-2 product-index">
                    <div class="row more-index">
                    <%= link_to "/products/#{f.id}" do %>
                        <% if f.status == "販売中" %>
                            <%= attachment_image_tag f, :image, :fill, 200, 200, format: 'jpeg',fallback: 'no_image.jpg', size: "150x150", class: 'product-image' %><br>
                        <% else %>
                          <div class="discontinued-box">
                            <div class="discontinued-box-2"><div class="hanbaiteishichuu">販売停止中</div></div>
                              <%= attachment_image_tag f, :image, :fill, 200, 200, format: 'jpeg',fallback: 'no_image.jpg', size: "150x150", class: 'product-image' %><br>
                          </div>
                        <% end %>
                        <%= f.name %>
                    <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

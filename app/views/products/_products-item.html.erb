
    <div class="col-lg-12">
        <div class="row">  
            <% @products.each do |f| %>
                <div class="col-lg-2 product-index">
                    <div class="row more-index">
                    <%= link_to "/products/#{f.id}" do %>
                        <%= attachment_image_tag f, :image, :fill, 200, 200, format: 'jpeg',fallback: 'no_image.jpg', size: "150x150", class: 'product-image' %><br>
                        <%= f.name %>
                    <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

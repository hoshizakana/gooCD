<%= render 'layouts/user-nav', products:  @product, user: current_user  %>
<h1>商品一覧</h1>
<% @products.each do |product| %>
    <%= attachment_image_tag product, :image, :fill, 50, 50, format: 'jpeg',fallback: 'no_image.jpg', size: "40x40" %>
    <%= link_to product.name, "/products/#{product.id}" %>
    <%= link_to product.artist.name, "/products/#{product.id}" %>

    <!-- いいね -->
    <% if product.favorited_by?(current_user) %>
      <%= link_to "/favorites/#{product.id}", method: :delete do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;">
        <%= product.favorites.count %> いいね
      <% end %>
    <% else %>
      <%= link_to "/favorites/#{product.id}", method: :post do %>
        <i class="fa fa-heart-o" aria-hidden="true">
        <%= product.favorites.count %> いいね
      <% end %>
    <% end %>

<% end %>
